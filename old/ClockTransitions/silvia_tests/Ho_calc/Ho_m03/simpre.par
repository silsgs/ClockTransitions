c----------------------------HAMILTONIAN--------------------------------------------------
c
      PARAMETER (idtot = 60) ! dimension of full energy matrix is (2J+1)*(2I+1)
c
      PARAMETER (icoo = 1) ! spherical coordinates=1, cartesian coordinates=2
      PARAMETER (ichar = 999) ! maximum number of charges
      PARAMETER (iparead = 0) ! if BKQ calculated then 0, if read then 1
      PARAMETER (istevens = 1) ! if Wybourne then 0, if Stevens B then 1, if Stevens A then 2
c
      PARAMETER (ahfxy =0.0000D0) ! perpendicular Hyperfine Coupling (cm-1)
      PARAMETER (ahfz  =0.0000D0) ! parallel Hyperfine Coupling (cm-1)
      PARAMETER (aquad = 0.00000D0) ! quadrupolar Coupling (cm-1)
c
      PARAMETER (ishi = 1) ! use of Sternheimer shielding parameters [1(yes)/0(no)]
c
      PARAMETER (ivar = 1) ! [1(on)/0(off)] variable magnetic field
      PARAMETER (fieldstart =-9.500D0) ! minimum intensity of the magnetic field (T)
      PARAMETER (fieldend = 9.500D0) ! maximum intensity of the magnetic field (T)
      PARAMETER (fieldstep = 0.1000D0) ! magnetic field increase at each step (T)
      PARAMETER (imaxe = 17) ! print the first imaxe energy levels vs magnetic field (the limit is idtot)
c
c----------------------------OUTPUT-------------------------------------------------------
c
      PARAMETER (iuni = 3) ! units (1=K, 2=meV, 3=cm-1)
c
      PARAMETER (ieig = 2) ! write eigenvalues [no(0)/yes(1)/yes+eigenvectors(2)]
c
      PARAMETER (irot = 0) ! rotation for a compact ground-state wave function [1(yes)/0(no)]
c
      PARAMETER (imag = 0) ! magnetization calculation [1(yes)/0(no)]
      PARAMETER (isus = 0) ! magnetic susceptibility calculation [1(yes)/0(no)]
c
      PARAMETER (temp = 3.50000D0) ! temperature (K)
c
c-----------------------------------MAGNETIC ION-----------------------------------------
c
      PARAMETER (inew = 0) ! if Ln(III) then 0, if New Ion then 1
      PARAMETER (coefio = 1.00000D0) ! ionicity coefficient
      PARAMETER (ielepin = 12) ! 2*J
      PARAMETER (inucpin = 3) ! 2*I
      PARAMETER (gx =  1.98000D0) ! lande gx factor 
      PARAMETER (gy =  1.98000D0) ! lande gy factor 
      PARAMETER (gz =  1.95800D0) ! lande gz factor 
c
c--------------------MAGNETIC FIELD CALCULATION IN SPACE POINTS--------------------------
c
      PARAMETER (nmf = 0) ! [1(on)/0(off)] magnetic field calculation in space points
      PARAMETER (nsp = 2000) ! maximum number of space points
c
c----------------------------DECOHERENCE--------------------------------------------------
c
      PARAMETER (idec = 0) ! [1(on)/0(off)] decoherence subroutine
c
      PARAMETER (igr = 6) ! qubit ground state 
      PARAMETER (iex = 8) ! qubit excited state 
c
c     Nuclear Spin Bath
c
      PARAMETER (idecn = 0) ! [1(on)/0(off)] nuclear decoherence
      PARAMETER (icoorn = 0) ! if carteasian then 0, if spherical then 1
      PARAMETER (imn = 500000) ! maximum number of nuclear spins 
c
c     Electronic Spin Bath
c
      PARAMETER (idece = 0) ! [1(on)/0(off)] electronic decoherence
      PARAMETER (icoord = 0) ! if carteasian then 0, if spherical then 1
      PARAMETER (ime = 1000000) ! maximum number of electron spins
      PARAMETER (nther = 1) ! number of thermal samplings
      PARAMETER (therd = 22.00000D0) ! thermal degree (%)
      PARAMETER (itherx = 0) ! J_x thermal expectation value [1(on)/0(off)]
      PARAMETER (thejx = 0.00000D0) ! J_x thermal expectation value
      PARAMETER (ithery = 0) ! J_y thermal expectation value [1(on)/0(off)]
      PARAMETER (thejy = 0.00000D0) ! J_y thermal expectation value
      PARAMETER (itherz = 0) ! J_z thermal expectation value [1(on)/0(off)]
      PARAMETER (thejz = 0.00000D0) ! J_z thermal expectation value
      PARAMETER (nt2 = 1) ! number of dilutions
      PARAMETER (iopc = 1) ! concentration calculation 
      PARAMETER (x = 10.00000D0) ! concentration (%) 
      PARAMETER (ammp = 576.07000D0) ! molar mass (g/mol) paramagnetic ion
      PARAMETER (ammd = 514.54000D0) ! molar mass (g/mol) diamagnetic ion
c
c-----------------------------------------------------------------------------------------
c
c     The following parameter is defined to minimize underflow problems
      PARAMETER (eps = 1.0D-12)
c
c-----------------------------------------------------------------------------------------
